<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/toggleholder"
        android:layout_width="match_parent"
        android:layout_height = "1dp"
        android:background = "@color/black"
        android:orientation = "horizontal">
        
        <ToggleButton 
	    android:id="@+id/dancetoggle"
	    android:background = "@drawable/dance"
	    android:layout_width = "0dp"
	    android:layout_height = "match_parent"
	    android:layout_weight = ".1666"
	    />
         
        <ToggleButton 
	    android:id="@+id/gallerytoggle"
	    android:layout_width = "0dp"
	    android:background = "@drawable/gallery"
	    android:layout_height = "match_parent"
	    android:layout_weight = ".1666"
	    />
          
        <ToggleButton 
	    android:id="@+id/musictoggle"
	    android:background = "@drawable/music"
	    android:layout_width = "0dp"
	    android:layout_height = "match_parent"
	    android:layout_weight = ".1666"
	    />
           
        <ToggleButton 
	    android:id="@+id/othertoggle"
	    android:background = "@drawable/other"
	    android:layout_width = "0dp"
	    android:layout_height = "match_parent"
	    android:layout_weight = ".1666"
	    />
            
        <ToggleButton 
	    android:id="@+id/theatretoggle"
	    android:background = "@drawable/theatre"
	    android:layout_width = "0dp"
	    android:layout_height = "match_parent"
	    android:layout_weight = ".1666"
	    />
        
    </LinearLayout>
    
    <LinearLayout
	    android:id="@+id/togglelabels"
	    android:layout_width="match_parent"
	    android:layout_height = "wrap_content"
	    android:background = "@color/black"
	    android:orientation = "horizontal">
        
        <TextView
            android:id="@+id/dancetogglelabel"
            android:gravity="center"
            android:text = "@string/dance"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = ".1666"
            android:textColor="@color/white"
            android:textSize = "16sp"
            android:background = "@color/black"
            />
        
        <TextView
            android:id="@+id/filmtogglelabel"
            android:gravity="center"
            android:text = "@string/film"
            android:layout_gravity="center"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = ".1666"
            android:textColor="@color/white"
            android:textSize = "16sp"
            android:background = "@color/black"
            /> 
            
        <TextView
            android:id="@+id/gallerytogglelabel"
            android:gravity="center"
            android:text = "@string/gallery"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = ".1666"
            android:textColor="@color/white"
            android:textSize = "16sp"
            android:background = "@color/black"
            />
         
          <TextView
            android:id="@+id/musictogglelabel"
            android:gravity="center"
            android:text = "@string/music"
            android:layout_gravity="center"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = ".1666"
            android:textColor="@color/white"
            android:textSize = "16sp"
            android:background = "@color/black"
            />        
          
          <TextView
            android:id="@+id/othertogglelabel"
            android:gravity="center"
            android:text = "@string/other"
            android:layout_gravity="center"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = ".1666"
            android:textColor="@color/white"
            android:textSize = "16sp"
            android:background = "@color/black"
            /> 
            
         <TextView
            android:id="@+id/theatretogglelabel"
            android:gravity="center"
            android:text = "@string/theatre"
            android:layout_gravity="center"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = ".1666"
            android:textColor="@color/white"
            android:textSize = "16sp"
            android:background = "@color/black"
            />    
                  
          
               
    </LinearLayout>


    <FrameLayout
        android:id="@+id/near_me_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>
